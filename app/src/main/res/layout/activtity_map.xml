<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <fragment
                android:id="@+id/map_MAP_mapFragemnt"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_FRG_search"
                    />
                ></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                     <ImageView
                         android:layout_width="130dp"
                         android:layout_height="40dp"
                        android:src="@drawable/distance" />
                    <TextView
                        android:id="@+id/map_LBL_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="casual"
                        android:text="0 km"
                        />
                    ></RelativeLayout>

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:src="@drawable/time" />
                    <TextView
                        android:id="@+id/map_LBL_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="casual"
                        android:text="0 mins"
                        />
                    ></RelativeLayout>


                ></LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/map_BTN_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1681DF"
            android:src="@drawable/ic_directions"
            />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/map_BTN_state_elite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="89dp"
                android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                android:src="@drawable/ic_satellite_on" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/map_BTN_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="167dp"
                android:backgroundTint="@color/places_autocomplete_fullscreen_background"
                android:src="@drawable/ic_my_gps" />
            ></RelativeLayout>


    ></LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>